set $mod Mod4
font pango:hack 10
for_window [class=".*"] border pixel 3

set $term --no-startup-id urxvt

bindsym $mod+Shift+Escape exec --no-startup-id prompt "Are you sure you want to leave i3?" "i3-msg exit"

# bindsym $mod+Shift+d exec "rofi -combi-modi window,drun -show combi"

floating_modifier 	$mod
hide_edge_borders 	both

# Needed for i3 gaps
gaps inner 15
gaps outer 15
smart_gaps on

# System Menu #
set $sysmenu "[p]oweroff  re[b]oot  [r]eload [s]uspend  [l]ogout  "
bindsym $mod+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym s         exec systemct suspend
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# #--letter key binding--# #
bindsym $mod+Return exec urxvt
#bindsym $mod+Shift+Return exec sudo urxvt

# #---Media Keys---# #

# Volume keys
#bindsym $mod+plus		exec --no-startup-id lmc up 5
