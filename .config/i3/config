# #--Basic Definition--# #
set $mod Mod4
font pango:mono 10
for_window [class=".*"] border pixel 1
set $term --no-startup-id       st
set $BROWSER --no-startup-id    firefox

floating_modifier 	$mod
hide_edge_borders 	both

# Needed for i3 gaps
gaps inner 15
gaps outer 15

# System Menu #
set $sysmenu "[p]oweroff  re[b]oot  [r]eload [s]uspend  [l]ogout  "
bindsym $mod+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym s         exec systemct suspend
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# #--Basic binding--# #
bindsym $mod+Return exec $term
#bindsym $mod+Shift+Return

bindsym $mod+Shift+space    floating toggle
bindysm $mod+space          focus mode_toggle

# #--Application launcher--# #
# Row First
bindsym $mod+q kill
#bindsym $mod+Shift+q

bindsym $mod+w exec --no-startup-id $BROWSER
bindsym $mod+Shift+w exec qutebrowser

bindsym $mod+e exec $term -e neomutt
#bindsym $mod+Shift+e

bindsym $mod+r exec  $term -e ranger 
bindsym $mod+Shift+r exec $term -e sudo ranger /

#bindsym $mod+t exec  
bindsym $mod+Shift+t gaps inner current set 15; gaps outer current set 15

bindsym $mod+y  exec $term -e calcurse
bindsym $mod+Shift+y exec --no-startup-id "bash ~/.scripts/i3resize left"

#bindsym $mod+u
bindsym $mod+Shift+u exec --no-startup-id "bash ~/.scripts/i3resize down"

bindsym $mod+i exec $term -e htop
bindsym $mod+Shift+i exec --no-startup-id "bash ~/.scripts/i3resize up"

#bindsym $mod+o exec subl #Run Sublime text
bindsym $mod+Shift+o exec --no-startup-id "bash ~/.scripts/i3resize right"

bindsym $mod+p exec mpc toggle
##bindsym $mod+Shift+p 

# Row second
#bindsym $mod+a
bindsym $mod+Shift+a exec $term -e pulsemixer

bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5

bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+Shift+d gaps inner current set 0; gaps outer current set 0

bindsym $mod+f fullscreen toggle
#bindsym $mod+Shift+f

bindsym $mod+g workspace prev
bindsym $mod+Shift+g exec --no-startup-id gimp; workspace $ws5

bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30

bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30

bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30

bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30

# Row Third 
bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

bindsym $mod+x exec --no-startup-id betterlockscreen -l
