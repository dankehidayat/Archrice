# #--Basic Definition--# #
set $mod Mod4
font pango:hack 10
for_window [class=".*"] border pixel 2
set $term --no-startup-id       urxvt
set $BROWSER --no-startup-id    firefox

# i3volume
# I use ALSA driver, you might change it if you use Pulseaudio
set $volumepath ~/i3-volume
set $statuscmd i3blocks
set $statussig SIGUSR1
set $volumestep 5
set $alsacard 1

floating_modifier 	$mod
hide_edge_borders 	both

# Needed for i3 gaps
gaps inner 10
gaps outer 10

# System Menu #
set $sysmenu "[p]oweroff  re[b]oot  [r]eload [s]uspend  [l]ogout  "
bindsym $mod+Delete      mode $sysmenu

mode $sysmenu {
    bindsym r         restart
    bindsym l         exit
    bindsym p         exec shutdown -P now
    bindsym b         exec shutdown -r now
    bindsym s         exec systemct suspend
    bindsym Return    mode "default"
    bindsym Escape    mode "default"
}

# #--Basic binding--# #
bindsym $mod+Return exec $term
#bindsym $mod+Shift+Return

bindsym $mod+Shift+space    floating toggle
bindysm $mod+space          focus mode_toggle

# Live Saver
bindsym $mod+Shift+Delete exec --no-startup-id $volumepath/volume -amn -t $statuscmd -u $statussig ; workspace 11 ; exec $term -e ranger 

# #--Extra XF86 keys--# #

bindsym XF86AudioRaiseVolume exec $volumepath/volume -np -i $volumestep -t $statuscmd -u $statussig
bindsym XF86AudioLowerVolume exec $volumepath/volume -np -d $volumestep -t $statuscmd -u $statussig
bindsym XF86AudioMute        exec $volumepath/volume -mn -t $statuscmd -u $statussig
#bindsym XF86MonBrightnessUp exec xbacklight +20 # increase screen brightness
#bindsym XF86MonBrightnessDown exec xbacklight -20 # decrease screen brightness

# #--Application launcher--# #
# Row First
bindsym $mod+q kill
#bindsym $mod+Shift+q

bindsym $mod+w exec --no-startup-id $BROWSER
#bindsym $mod+Shift+w exec 

bindsym $mod+e exec $term -e neomutt
#bindsym $mod+Shift+e

bindsym $mod+r exec  $term -e ranger 
bindsym $mod+Shift+r exec $term -e sudo ranger /

bindsym $mod+t exec nautilus	    
bindsym $mod+Shift+t gaps inner current set 15; gaps outer current set 15

bindsym $mod+y  exec $term -e calcurse
bindsym $mod+Shift+y exec --no-startup-id "bash ~/.scripts/i3resize left"

#bindsym $mod+u
bindsym $mod+Shift+u exec --no-startup-id "bash ~/.scripts/i3resize down"

bindsym $mod+i exec $term -e htop
bindsym $mod+Shift+i exec --no-startup-id "bash ~/.scripts/i3resize up"

bindsym $mod+o exec subl #Run Sublime text
bindsym $mod+Shift+o exec --no-startup-id "bash ~/.scripts/i3resize right"

#bindsym $mod+p 
#bindsym $mod+Shift+p 

# Row second
#bindsym $mod+a
bindsym $mod+Shift+a exec $term -e pulsemixer

bindsym $mod+s gaps inner current plus 5
bindsym $mod+Shift+s gaps inner current minus 5

bindsym $mod+d exec --no-startup-id rofi -show run
bindsym $mod+Shift+d gaps inner current set 0; gaps outer current set 0

bindsym $mod+f fullscreen toggle
#bindsym $mod+Shift+f

bindsym $mod+g workspace prev
bindsym $mod+Shift+g exec --no-startup-id gimp; workspace $ws5

bindsym $mod+h focus left
bindsym $mod+Shift+h move left 30

bindsym $mod+j focus down
bindsym $mod+Shift+j move down 30

bindsym $mod+k focus up
bindsym $mod+Shift+k move up 30

bindsym $mod+l focus right
bindsym $mod+Shift+l move right 30

# Row Third 
bindsym $mod+z gaps outer current plus 5
bindsym $mod+Shift+z gaps outer current minus 5

bindsym $mod+x exec --no-startup-id betterlockscreen -l dim
#bindsym $mod+Shift+x

#bindsym $mod+c
#bindsym $mod+Shift+c 

bindsym $mod+v exec $term -e cava
#bindsym $mod+Shift+v

#bindsym $mod+b 
#bindsym $mod+Shift+b

bindsym $mod+n exec $term -e newsboat
#bindsym $mod+Shift+n

bindsym $mod+m exec --no-startup-id $term -e ncmpcpp
bindsym $mod+Shift+m exec $volumepath/volume -amn -t $statuscmd -u $statussig

# #---Function Buttons---# #
##bindsym $mod+F1     
##bindsym $mod+F2		
bindsym $mod+F3	    restart
##bindsym $mod+F4			
bindsym $mod+F5			exec $term -e bashmount
##bindsym $mod+F6		
##bindsym $mod+F7
##bindsym $mod+F8
bindsym $mod+F9     exec --no-startup-id $netrefresh
bindsym $mod+F10	  exec --no-startup-id $hibernate
bindsym $mod+F11    exec sudo reboot
bindsym $mod+F12    exec shutdown -P

# For screenshot and recording
# Print current window
bindsym Print exec scrot -u '%Y%m%d_%H%M%S.png' -e 'mv $f ~/Pictures/Scrot'
# Print fullscreen
bindsym Shift+Print exec scrot '%Y%m%d_%Ho%M%S.png' -e 'mv $f ~/Pictures/Scrot'

# #--Workspace Bindings--# #
bindsym $mod+Home workspace $ws1
bindsym $mod+Control+Home move container to  workspace $ws1
bindsym $mod+End workspace $ws10
bindsym $mod+Control+End move container to workspace $ws10
bindsym $mod+apostrophe		split horizontal ;; exec $term
bindsym $mod+slash split vertical ;; exec $term
bindsym $mod+Shift+slash	kill
bindsym $mod+backslash workspace back_and_forth
bindsym $mod+Tab workspace back_and_forth

# Define names for default workspaces for which we configure key bindings later on.
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10

# #---Arrow Keys---# #
bindsym $mod+Left		    focus left
bindsym $mod+Down		    focus down
bindsym $mod+Up			    focus up
bindsym $mod+Right 		    focus right
bindsym $mod+Shift+Left		move left
bindsym $mod+Shift+Down		move down
bindsym $mod+Shift+Up		move up
bindsym $mod+Shift+Right    move right

# #--External Scripts--# #
# composite manager
exec --no-startup-id compton --xrender-sync-fence
#Dunst for notifications:
exec --no-startup-id dunst
#Music player daemon:
exec --no-startup-id mpd
#Torrent daemon:
exec --no-startup-id transmission-daemon
# Setting up the background
exec_always --no-startup-id exec bash $HOME/.fehbg
# Launch Polybar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
# Run Polybar Script
exec_always --no-startup-id $HOME/.config/i3/polybar.sh &
# Run the remapping script
exec --no-startup-id ~/.scripts/remaps

bar {
    font pango:DEC Terminal 10
    status_command    i3blocks
    position          bottom
    mode              dock
    modifier          none
    colors {
      separator #000000
      background #1E1F29
      statusline #dddddd
      focused_workspace #0088CC #0088CC #ffffff
      active_workspace #333333 #333333 #ffffff
     inactive_workspace #333333 #333333 #888888
      urgent_workspace #2f343a #900000 #ffffff
      }        
}
